  <persistence-unit name="FirePassPU" transaction-type="JTA">
    <jta-data-source>jdbc/firepass</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
             <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/firepass"/>
         <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.password" value="3223"/>
